{
  "env": {
    "es6": true,
    "browser" : true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "prettier/prettier": 0, // prettier에 대한 경고 끄기
    "for-direction": 2, // for 루프가 무한대로 실행되는 것을 방지
    "prefer-const": false, // let이 자기 멋대로 const로 바뀌는 것 끄기
    "max-depth" : ["error", 2],
    //"max-lines-per-function" : ["error", 15],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "eqeqeq": "error",
    "no-console": "warn",
    "no-dupe-args": "error",
    "no-unreachable": "error",
    "no-unused-vars": "warn",
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": "block-like", "next": "*" }
    ]
  },
  "plugins": ["import", "prettier"]
}
